{
  "$schema": "https://www.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "*.php": [
      "scripts/check-syntax-php.sh",
      "scripts/check-debug-php.sh",
      "vendor/bin/phpstan analyse --no-progress",
      "vendor/bin/pint"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
