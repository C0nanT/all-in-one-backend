{
  "$schema": "https://www.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "app/**/*.php": [
      "vendor/bin/phpstan analyse --no-progress",
      "vendor/bin/pint"
    ],
    "modules/**/*.php": [
      "vendor/bin/phpstan analyse --no-progress",
      "vendor/bin/pint"
    ],
    "*.php": [
      "vendor/bin/pint"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
